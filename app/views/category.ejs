<%- include('./partials/header') %>

<h1 class="content-title">Les actualités par catégorie V2</h1>


<form method="get">
 
    <label for="search">Search for : "<%= search %>" </label>
    <input type="text" name="search" placeholder="Categories" id="search" required>
    
    <button type="submit">Submit</button>

</form>

<h1><%= text %></h1>

<div class="pure-g">

<% filteredArticles.forEach(article => {%> 
    
        <article class="card pure-u-1 pure-u-lg-1-2 pure-u-xl-1-3">
        <header>
            <img class="card-img pure-img" src="../images/<%= article.img %>" alt="<%= article.img_alt %>">
            <h2><%= article.title %></h2>
            <div class="card-meta">
                Par <a href="#"><%= article.author %></a>
                dans la catégorie <a href="/category/<%= article.category %>"><%= article.category %></a>
            </div>
        </header>
        <p>
            <%= article.text %>
        </p>
        <a class="card-action pure-button" href="/article/<%= article.id %>">Lire l'article</a>
    </article>

<%}) %> 


<%- include('./partials/footer') %>